{
  "manifest_version": 3,
  "name": "HyperBoost Secure Verifier",
  "version": "1.0",
  "description": "Securely verifies social tasks for HyperBoost platform.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "*://*.youtube.com/*",
    "*://*.facebook.com/*",
    "*://*.instagram.com/*",
    "*://*.tiktok.com/*",
    "http://localhost:3000/*" 
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*", "*://*.facebook.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}